#!/usr/bin/env bash
set -eo pipefail
[[ "${DEBUG}" == "true" ]] && set -x

if [[ -z "${COLLABORA_ENTRYPOINT_INITIALIZED}" ]]
then
  for FILE in $(find /etc/entrypoint.d -iname \*.sh | sort)
  do
    source ${FILE}
  done
fi

CHECK="$(curl -sL -w %{http_code} -o /dev/null http://localhost:9980/)"

if [[ "${CHECK}" == "200" ]]
then
  exit 0
fi

exit 1
